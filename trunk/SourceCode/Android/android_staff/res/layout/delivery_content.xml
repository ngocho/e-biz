<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@color/white_smoke"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="5dp" android:gravity="center_vertical"
		android:background="@drawable/bg_header">
		<ImageView android:id="@+id/imageView1" android:src="@drawable/title_test"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:scaleType="centerInside"></ImageView>
		<TextView android:layout_marginLeft="5dip" android:textSize="14dip"
			android:textStyle="bold" android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content" android:id="@+id/listtest_title"
			android:layout_height="wrap_content" android:textColor="@color/black"
			android:text="@string/delivery_content_title"></TextView>
	</LinearLayout>
	<ListView android:layout_height="wrap_content" android:id="@+id/listView_delivery_content"
		android:layout_weight="1.0" android:layout_width="fill_parent"></ListView>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout1" android:layout_height="wrap_content"
		android:background="@drawable/bg_header" android:gravity="center_vertical">
		<ImageButton android:id="@+id/delivery_home" android:src="@drawable/menu_delivery"
			android:layout_weight="1.0" android:background="@color/transparent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
		<ImageButton android:id="@+id/delivery_food"
			android:src="@drawable/menu_food" android:layout_weight="1.0"
			android:background="@color/transparent" android:layout_width="wrap_content"
			android:layout_height="wrap_content"></ImageButton>
		<ImageButton android:id="@+id/delivery_chat" android:src="@drawable/menu_chat"
			android:layout_weight="1.0" android:layout_width="wrap_content"
			android:background="@color/transparent" android:layout_height="wrap_content"></ImageButton>
		<ImageButton android:id="@+id/delivery_statistic" android:src="@drawable/menu_stats"
			android:layout_weight="1.0" android:background="@color/transparent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageButton>
	</LinearLayout>
</LinearLayout>
