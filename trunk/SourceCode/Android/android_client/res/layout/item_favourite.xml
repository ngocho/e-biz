<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/linearLayout1" android:layout_width="fill_parent"
		android:gravity="center_vertical">
		<ImageView android:src="@drawable/icon" android:background="@drawable/button_bg_s"
			android:padding="2dp" android:scaleType="fitXY"
			android:layout_margin="5dp" android:layout_height="80dp"
			android:layout_width="80dp" android:id="@+id/item_favourite_image"></ImageView>
		<TextView android:text="TextView" android:layout_weight="1.0"
			android:padding="10dp" android:id="@+id/item_favourite_name"
			android:layout_width="fill_parent" android:layout_height="fill_parent"></TextView>
		<LinearLayout android:id="@+id/linearLayout2"
			android:orientation="vertical" android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:gravity="center_vertical">
			<TextView android:text="TextView" android:id="@+id/item_favourite_buy"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:text="TextView" android:id="@+id/item_favourite_buyend"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:text="TextView" android:id="@+id/item_favourite_date"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
