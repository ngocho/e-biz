<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

  <form-beans>
    <form-bean name="order" type="ebiz.form.OrderBillForm" />
    <form-bean name="searchForm" type="ebiz.form.SearchForm" />
  </form-beans>
  
  <global-exceptions>

  </global-exceptions>

  <global-forwards>
  </global-forwards>

	<action-mappings>

    <action 
			path="/category"
			type="ebiz.action.food.DisplayCategory" >
		<forward name="success" path="category" redirect="true" />
		<forward name="failure" path="/home.vn" redirect="true" />
    </action>
	
    <action 
			path="/categoryRecord"
			type="ebiz.action.food.DisplayCategoryRecord" >
		<forward name="success" path="category" redirect="true" />
    </action>
	
    <action 
			path="/displayProductDetail"
			type="ebiz.action.food.DisplayProductDetail" >
		<forward name="success" path="product" redirect="true" />
    </action>
    
    <action 
			path="/displayShoppingCart"
			type="ebiz.action.food.DisplayShoppingCart" >
		<forward name="success" path="shopping" redirect="true" />
    </action>
    
    <action 
			path="/displayShoppingDetail"
			type="ebiz.action.food.ShoppingFoodDetail" >
		<forward name="success" path="shopping_detail" redirect="true" />
    </action>
    
    <action 
			path="/updateShopping"
			type="ebiz.action.food.UpdateShoppingCart" >
		<forward name="success" path="shopping" redirect="true" />
		<forward name="failure" path="shopping_detail" redirect="true" />
    </action>
    
    <action 
			path="/deleteShoppingFood"
			type="ebiz.action.food.DeleteFoodShop" >
		<forward name="success" path="shopping" redirect="true" />
    </action>
    
     <action 
            path="/deleteShopping"
            type="ebiz.action.food.DeleteShoppingCart" >
        <forward name="success" path="/home.vn" redirect="true" />
        <forward name="failure" path="shopping" redirect="true" />
    </action>
    
    <action 
			path="/addShoppingCart"
			type="ebiz.action.food.AddShoppingCart" >
    </action>
    
    <action 
			path="/addShopping"
			type="ebiz.action.food.AddShoppingSubmit" >
		<forward name="success" path="category" redirect="true" />
    </action>
	
    <action 
			path="/checkAuthentication"
			type="ebiz.action.food.AuthenticationUser" >
		<forward name="success" path="checkout" redirect="true" />
		<forward name="login" path="loginLayout" redirect="true" />
		<forward name="failure" path="shopping" redirect="true" />
    </action>
	
    <action input="checkout"
			path="/createBill"
			type="ebiz.action.food.CreateOrderBill" 
			name="order"
			scope="session" validate="true">
		<forward name="success" path="bill" redirect="true" />
		<forward name="failure" path="checkout" redirect="true" />
    </action>
    
    <action input="home"
			path="/search"
			type="ebiz.action.food.Search" 
			name="searchForm"
			scope="session" validate="true">
		<forward name="success" path="search_result" redirect="true" />
		<forward name="failure" path="/home.vn" redirect="true" />
    </action>
    

	</action-mappings>
</struts-config>