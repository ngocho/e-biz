<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
"http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

    <!--
     This is a minimal Validator form file with a couple of examples.
-->

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <formset>
        <!-- An example form -->
        <form name="login">
            <field
                property="loginId"
                depends="required">
                <arg0 key="login.loginId"/>
            </field>
            <field
                property="loginPassword"
                depends="required">
                <arg0 key="login.loginPassword"/>
            </field>
            <field
                property="loginPassword"
                depends="minlength">
                <var>
                    <var-name>minlength
                    </var-name>
                    <var-value>8
                    </var-value>
                </var>
                <arg0 key="login.loginPassword"/>
            </field>
            <field
                property="email"
                depends="email">
                <arg0 key="login.email"/>
            </field>
        </form>
        
        <form name="order">
            <field
                property="nameCustomer"
                depends="required">
                <arg0 key="order.nameCustomer"/>
            </field>
            <field
                property="phone"
                depends="required">
                <arg0 key="order.phone"/>
            </field>
            <field
                property="email"
                depends="email">
                <arg0 key="order.email"/>
            </field>
            <field
                property="homeNumber"
                depends="required">
                <arg0 key="order.homeNumber"/>
                
            </field>
            <field
                property="streetName"
                depends="required">
                <arg0 key="order.streetName"/>
                
            </field>
            <field
                property="wardName"
                depends="required">
                <arg0 key="order.wardName"/>
                
            </field>
             <field
                property="districtName"
                depends="required">
                <arg0 key="order.districtName"/>
                
            </field>
            <field
                property="districtName"
                depends="required">
                <arg0 key="order.districtName"/>
                
            </field>
            <field
                property="dateShip"
                depends="required">
                <arg0 key="order.dateShip"/>
                
            </field>
        </form>
        
          <form name="providerForm">
            <field
                property="loginId"
                depends="required">
                <arg0 key="providerForm.loginId"/>
            </field>
             <field
                property="loginPassword"
                depends="required">
                <arg0 key="providerForm.loginPassword"/>
            </field>
             <field
                property="loginName"
                depends="required">
                <arg0 key="providerForm.loginName"/>
            </field>
             <field
                property="email"
                depends="required">
                <arg0 key="providerForm.email"/>
            </field>
             <field
                property="homeNumber"
                depends="required">
                <arg0 key="providerForm.homeNumber"/>
            </field>
              <field
                property="streetName"
                depends="required">
                <arg0 key="providerForm.streetName"/>
            </field>
             <field
                property="wardName"
                depends="required">
                <arg0 key="providerForm.wardName"/>
            </field>
           <field
                property="districtName"
                depends="required">
                <arg0 key="providerForm.districtName"/>
            </field>
             <field
                property="districtName"
                depends="required">
                <arg0 key="providerForm.districtName"/>
            </field>
             <field
                property="phone"
                depends="required">
                <arg0 key="providerForm.detail"/>
            </field>
          </form>
    </formset>
        
</form-validation>
