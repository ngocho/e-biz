<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_marginBottom="10dp" android:layout_marginTop="5dp"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_width="110dp" android:layout_height="wrap_content"
			android:orientation="vertical" android:background="@drawable/nm_deal_bg"
			android:layout_gravity="center_horizontal">
			<TextView android:id="@+id/item_best_gt" android:textColor="@color/white"
				android:textSize="13dp" android:text="10%" android:textStyle="bold"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:background="@drawable/nm_widget_ic_promotion"
				android:gravity="center_vertical|center_horizontal"></TextView>
			<TextView android:layout_marginLeft="20dp" android:id="@+id/textView4"
				android:text="Giá trị:" android:textColor="@color/white"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_marginLeft="20dp" android:id="@+id/item_best_price"
				android:text="0" android:textColor="@color/white"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_marginLeft="20dp" android:id="@+id/textView4"
				android:text="Tiết kiệm:" android:textColor="@color/white"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_marginLeft="20dp"
				android:id="@+id/item_best_pricesub" android:text="0"
				android:textColor="@color/white" android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<LinearLayout android:id="@+id/linearLayout5"
				android:layout_marginTop="5dp" android:background="@drawable/nm_gtgdgiaca"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="vertical" android:gravity="center_vertical|center_horizontal">
				<TextView android:text="Còn lại        vnđ" android:id="@+id/textView4"
					android:textColor="@color/white" android:textSize="12dp"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				<TextView android:text="TextView" android:id="@+id/item_best_buyprice"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textStyle="bold" android:textSize="14dp" android:textColor="@color/white"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			</LinearLayout>
			<TextView android:id="@+id/item_best_buycount"
				android:textColor="@color/white" android:text="TextView"
				android:textSize="12dp" android:textStyle="bold"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"></TextView>
			<TextView android:id="@+id/fdfe" android:textColor="@color/white"
				android:textSize="12dp" android:text="@string/buyer"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout3"
			android:layout_marginRight="5dp" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<TextView android:text="TextView" android:id="@+id/item_best_name" android:textSize="17dp"
				android:layout_marginLeft="10dp" android:textStyle="bold"
				android:textColor="@color/black" android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<ImageView android:background="@drawable/button_bg_s"
				android:layout_marginLeft="5dp" android:padding="2dp"
				android:scaleType="fitXY" android:id="@+id/item_best_image"
				android:layout_weight="1.0" android:src="@drawable/btn_ads_close"
				android:layout_width="fill_parent" android:layout_height="fill_parent"></ImageView>
			<TextView android:text="TextView" android:id="@+id/item_best_date"
				android:layout_marginRight="5dp" android:textColor="@color/black"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="right" android:layout_gravity="right"></TextView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
