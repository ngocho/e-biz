<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/my_background"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/linearLayout1"
		android:background="@drawable/theme_activity_title_bar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="center_vertical" android:gravity="center_vertical">
		<Button android:id="@+id/tab_deals_back" android:background="@drawable/btn_back"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="left" android:layout_gravity="left"></Button>
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/linearLayout4" android:layout_height="fill_parent"
			android:gravity="center_vertical|center_horizontal">
			<TextView android:textStyle="bold" android:gravity="center_horizontal"
				android:id="@+id/textView1" android:text="@string/menu_DEAL"
				android:textColor="@color/white" android:layout_marginRight="40dp"
				android:layout_height="wrap_content" android:textSize="18dp"
				android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout5" android:layout_height="wrap_content"
		android:gravity="center_vertical|center_horizontal">
		<kltn.client.android_client.ui.CircleFlowIndicator
			android:layout_margin="5dip" android:id="@+id/viewflowindic"
			android:layout_height="wrap_content" android:background="#00000000"
			android:layout_width="wrap_content"></kltn.client.android_client.ui.CircleFlowIndicator>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_marginBottom="5dp" android:layout_weight="1.0"
		android:layout_width="fill_parent" android:id="@+id/linearLayout7"
		android:orientation="vertical">
		<kltn.client.android_client.ui.ViewFlow
			android:id="@+id/viewflow" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
		</kltn.client.android_client.ui.ViewFlow>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout2"
		android:background="@drawable/footer_menu" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="clip_horizontal"
		android:layout_gravity="center_horizontal">
		<LinearLayout android:id="@+id/tab_deals_home"
			android:layout_weight="1.0" android:background="@drawable/button_menu"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical" android:gravity="center_horizontal">
			<ImageView android:src="@drawable/icon_menu_home"
				android:layout_marginTop="1dp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/imageView2"></ImageView>
			<TextView android:id="@+id/textView2" android:textSize="12dp"
				android:textColor="@color/white" android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content" android:text="@string/menu_home"
				android:layout_width="wrap_content"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/tab_deals_deal"
			android:layout_weight="1.0" android:background="@drawable/button_menu"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical" android:gravity="center_horizontal">
			<ImageView android:src="@drawable/icon_deals"
				android:layout_marginTop="1dp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/imageView2"></ImageView>
			<TextView android:id="@+id/textView2" android:textSize="12dp"
				android:textColor="@color/white" android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content" android:text="@string/menu_DEAL"
				android:layout_width="wrap_content"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/tab_deals_best"
			android:clickable="true" android:layout_weight="1.0"
			android:background="@drawable/button_menu" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical"
			android:gravity="center_horizontal">
			<ImageView android:src="@drawable/icon_listanitem"
				android:layout_marginTop="1dp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/imageView2"></ImageView>
			<TextView android:id="@+id/textView2" android:textSize="12dp"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content" android:text="@string/menu_best"
				android:textColor="@color/white" android:layout_width="wrap_content"></TextView>
		</LinearLayout>
		<LinearLayout android:id="@+id/tab_deals_browse"
			android:clickable="true" android:layout_weight="1.0"
			android:background="@drawable/button_menu" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical"
			android:gravity="center_horizontal">
			<ImageView android:src="@drawable/icon_browsecategory"
				android:layout_marginTop="1dp" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/imageView2"></ImageView>
			<TextView android:id="@+id/textView2" android:textSize="12dp"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_height="wrap_content" android:text="@string/menu_browser"
				android:textColor="@color/white" android:layout_width="wrap_content"></TextView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
