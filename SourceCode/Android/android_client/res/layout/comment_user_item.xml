<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@color/white_smoke"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/linearLayout1"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/imageView1"
			android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/icon"></ImageView>
		<LinearLayout android:id="@+id/linearLayout2"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView android:layout_width="wrap_content"
				android:textSize="16dp" android:textStyle="bold" android:textColor="@color/blue"
				android:layout_height="wrap_content" android:id="@+id/comment_item_username"
				android:text="TextView" android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
			<TextView android:layout_width="wrap_content"
				android:textColor="@color/black" android:layout_height="wrap_content"
				android:id="@+id/comment_item_des" android:lines="3" android:text="TextView"
				android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
			<LinearLayout android:id="@+id/linearLayout3"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
				<TextView android:layout_width="wrap_content"
					android:layout_weight="1.0" android:textColor="@color/black"
					android:layout_height="wrap_content" android:id="@+id/comment_item_date"
					android:text="TextView" android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
