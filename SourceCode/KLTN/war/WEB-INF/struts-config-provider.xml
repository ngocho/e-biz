<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>

	<form-beans>
		<form-bean name="providerForm" type="ebiz.form.ProviderForm" />
		<form-bean name="providerFormLogin" type="ebiz.form.ProviderForm" />
		<form-bean name="foodForm" type="ebiz.form.FoodForm" />
	</form-beans>
  
	<global-exceptions>

	</global-exceptions>

	<global-forwards>

	</global-forwards>

	<action-mappings>

    <action path="/registerProvider" forward="home_provider_register">
    </action>
	
    <action path="/loginProvider" forward="home_provider_login">
     </action>
	 
     <action path="/transferUpImage" forward="home_provider_upload">
    </action>
	
    <action path="/uploadLink" 
            type="ebiz.action.account.provider.UploadLink" >
        <forward name="success" path="home_provider_upload" redirect="true" />
    </action>
    
    <action path="/provider" 
			type="ebiz.action.account.provider.AuthenticationProvider" >
		<forward name="success" path="/displayProduct.vn" redirect="true" />
		<forward name="failure" path="home_provider_login" redirect="true" />
    </action>
    
    <action input="home_provider_login" 
			path="/loginProviderAcc"
			type="ebiz.action.account.provider.Login" 
			name="providerFormLogin"
			scope="session" validate="true">
		<forward name="success" path="/displayProduct.vn" redirect="true" />
		<forward name="success1" path="home_provider_authentication" redirect="true" />
		<forward name="failure" path="home_provider_login" redirect="true" />
    </action>
     
    <action 
			path="/logoutProviderAcc"
			type="ebiz.action.account.provider.Logout" >
		<forward name="success" path="home_provider_authentication" redirect="true" />
		<forward name="failure" path="home_provider" redirect="true" />
    </action>
     
    <action input="home_provider_register" 
			path="/registerProvierAcc"
			type="ebiz.action.account.provider.Register" 
			name="providerForm"
			scope="session" validate="true">
    <forward name="success" path="home_provider_login" redirect="true" />
    <forward name="failure" path="home_provider_register" redirect="true" />
    </action>
     
    <action input="home_provider_upload" 
			path="/uploadProduct"
			type="ebiz.action.account.provider.UploadProduct" 
			name="foodForm"
			scope="session" validate="true">
		<forward name="success" path="home_provider_upload" redirect="true" />
		<forward name="success1" path="/displayProduct.vn" redirect="true" />
		<forward name="failure" path="home_provider_upload" redirect="true" />
		<forward name="login" path="home_provider_login" redirect="false" />
    </action>
     
    <action
			path="/uploadImage"
			type="ebiz.action.UploadImage" 
			scope="session" validate="true">
		<forward name="success" path="/transferUpImage.vn" redirect="true" />
    </action>
	
    <action
			path="/displayProduct"
			type="ebiz.action.account.provider.DisplayProduct" 
			scope="session" validate="true">
		<forward name="success" path="home_provider" redirect="false" />
		<forward name="failure" path="home_provider" redirect="false" />
    </action>
    
    <action
			path="/categoryProviderRecord"
			type="ebiz.action.account.provider.DisplayProductPaging" 
			scope="session" validate="true">
		<forward name="success" path="home_provider" redirect="false" />
		<forward name="failure" path="home_provider" redirect="false" />
    </action>
    
      <action 
			path="/displayDetailProduct"
			type="ebiz.action.account.provider.DetailProduct" >
		<forward name="success" path="home_provider_upload" redirect="false" />
		<forward name="failure" path="home_provider" redirect="false" />
    </action>
    
     <action 
			path="/deleteProduct"
			type="ebiz.action.account.provider.DeleteProduct" >
		<forward name="success" path="/displayProduct.vn" redirect="false" />
    </action>
    
    <action 
			path="/resetForm"
			type="ebiz.action.account.provider.ResetForm" >
		<forward name="success" path="/resetForm.vn" redirect="false" />
    </action>
    
    <action 
			path="/authenticationProvider"
			type="ebiz.action.account.provider.Authentication" >
		<forward name="success" path="/displayProduct.vn" redirect="false" />
		<forward name="failure" path="home_provider_authentication" redirect="false" />
    </action>
    
     
	</action-mappings>

</struts-config>