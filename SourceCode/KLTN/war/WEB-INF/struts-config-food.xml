<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>


  <form-beans>
    <!-- <form-bean name="login" type="formBean.loginbean" /> -->
    <form-bean name="customer" type="ebiz.dto.account.customer.Customer" />

  </form-beans>
  <global-exceptions>

  </global-exceptions>

  <global-forwards>
    <!-- <forward name="register" path="/register.vn"/> <forward name="/index.jsp" 
      path="/"/> <forward name="main.page" path="/index.jsp" /> <forward name="success" 
      path="/index.jsp" /> -->
  </global-forwards>


  <action-mappings>
    <action path="/" forward="/RegisterCustomer.jsp">
    </action>

    <!-- <action input="/login.jsp" path="/login" type="action.login" name="login" 
      scope="request" validate="true"> <forward name="success" path="/index.jsp" 
      redirect="true"/> <forward name="failure" path="/login.jsp" redirect="true"/> 
      </action> -->
    <action 
      path="/category"
      type="ebiz.action.food.DisplayCategory" 
      scope="session" validate="false">
      <forward name="success" path="category" redirect="true" />
      <forward name="failure" path="/home.jsp" redirect="true" />
    </action>
    <action 
      path="/categoryRecord"
      type="ebiz.action.food.DisplayCategoryRecord" 
      scope="session" validate="false">
      <forward name="success" path="category" redirect="true" />
    </action>
    <action 
      path="/displayProductDetail"
      type="ebiz.action.food.DisplayProductDetail" 
      scope="session" validate="false">
      <forward name="success" path="product" redirect="true" />
    </action>
    
    <action 
      path="/displayShoppingCart"
      type="ebiz.action.food.DisplayShoppingCart" 
      scope="session" validate="false">
      <forward name="success" path="shopping" redirect="true" />
    </action>
    <action 
      path="/addShoppingCart"
      type="ebiz.action.food.AddShoppingCart" 
      scope="session" validate="false">
    </action>
    <action 
      path="/updateShoppingCart"
      type="ebiz.action.food.UpdateShoppingCart" 
      scope="session" validate="false">
    </action>
    <action 
      path="/checkAuthentication"
      type="ebiz.action.food.AuthenticationUser" 
      scope="session" validate="false">
      <forward name="success" path="checkout" redirect="true" />
      <forward name="input" path="login" redirect="true" />
    </action>
     <action 
      path="/createBill"
      type="ebiz.action.food.CreateOrderBill" 
      scope="session" validate="false">
      <forward name="success" path="bill" redirect="true" />
      <forward name="input" path="loginLayout" redirect="true" />
    </action>
    <!--  action path="/getPromotion"
      type="mobile.ebiz.action.Promotion" 
      scope="session" validate="false">
    </action>-->

  </action-mappings>
  <!-- <message-resources parameter="ApplicationResources" />
  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property property="pathnames"
      value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
  </plug-in> -->

</struts-config>